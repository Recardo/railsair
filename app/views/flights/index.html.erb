<h1>Listing flights</h1>

<table>
  <tr>
    <th>Nr</th>
    <th>Departure datetime</th>
    <th>Arrival datetime</th>
    <th>Departure airport</th>
    <th>Arrival airport</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.nr %></td>
    <td><%= flight.departure_datetime.strftime('%d.%m.%Y %H:%M') %></td>
    <td><%= flight.arrival_datetime.strftime('%d.%m.%Y %H:%M') %></td>
    <td><%= flight.departure_airport.code %></td>
    <td><%= flight.arrival_airport.code%></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

